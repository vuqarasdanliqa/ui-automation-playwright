{
  "name": "ui-automation-playwright",
  "version": "1.0.0",
  "description": "UI Automation Framework with Cucumber, Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf reports allure-results allure-report cucumber-report.html",
    "test": "cucumber-js",
    "test:chromium": "BROWSER=chromium npm run test",
    "test:firefox": "BROWSER=firefox npm run test",
    "test:webkit": "BROWSER=webkit npm run test",
    "test:all": "npm run test:chromium && npm run test:firefox && npm run test:webkit",
    "report:generate": "npx allure generate reports/allure-results --clean -o reports/allure-report",
    "report:open": "npx allure open reports/allure-report",
    "report": "npm run report:generate && npm run report:open",
    "test:report": "npm run test || npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.42.0",
    "@types/node": "^20.0.0",
    "allure-commandline": "^2.27.0",
    "allure-cucumberjs": "^2.15.1",
    "dotenv": "^16.4.5",
    "qase-api-client": "^1.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.3"
  }
}
